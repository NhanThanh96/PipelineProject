mixin nav()
	ul.navbar__list
		each val in menu
			li.navbar__item
				a.navbar__link(
					href=val.url
					class= val.submenu ? "dropdown js-dropdown" : ""
					)= val.name
				if val.submenu
					ul.navbar__list(
						class= val.submenu ? "dropdown-menu js-dropdown-menu" : ""
					)
						each sub in val.submenu
							li.navbar__item
								a.navbar__link(href= sub.url)= sub.name

-
